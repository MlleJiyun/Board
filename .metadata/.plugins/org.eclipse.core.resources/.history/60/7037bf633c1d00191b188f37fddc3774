<script>
$(document).ready(function() {
	
	var formObj= $("form[role='form']");
	
	console.log(formObj);
	
	$(".writeBtn").on("click", function(){
		formObj.attr("action", "/post/register");
		formObj.attr("method", "get");
		formObj.submit();
	})
	
	$(".goListBtn").on("click", function(){
		formObj.attr("action", "post/listPage");
		formObj.attr("method", "get");
		formObj.submit();
	});
	
}
</script>
    
